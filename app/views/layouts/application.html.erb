					<!-- <a href="#">Site Map</a> -->
					<div><%= link_to 'Contact Us', '/contact' %></div>
				</div>

				<div class="col-sm-3">

					<% if admin_signed_in? %>
						<div><%= link_to 'Logout', destroy_admin_session_path, method: :delete %></div>
