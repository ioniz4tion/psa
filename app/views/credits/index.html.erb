<header style="background-image: url('https://placehold.it/1351x564'); background-position:center; background-size: cover;"></header>

<section id="credits">

	<h1>Credits</h1>

	<% @credits.order(:name).each do |credit| %>

		<article>
				
			<h2><%= bip(credit, :name, :textarea) %></h2>

			<div class="col-sm-3">
				<%= image_tag(credit.image.url) %>
			</div>

			<%= cms_upload(credit, :image, "Upload Image") %>

			<div class="col-sm-9">
				<p><%= bip(credit, :description, :textarea) %></p>
			</div>

		</article>

	<% end %>

</section>