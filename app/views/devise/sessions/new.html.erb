<section id="login">

  <h1>Log in</h1>

  <h2>Admin Only</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
      <div class="col-sm-3"><span>Email</span></div>
      <div class="col-sm-9"><%= f.email_field :email, autofocus: true, :class => "form-control" %></div>
    </div>

    <div class="row">
      <div class="col-sm-3"><span>Password</span></div>
      <div class="col-sm-9"><%= f.password_field :password, autocomplete: "off", :class => "form-control" %></div>
    </div>

    <div class="row">

      <div class="col-sm-6">
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me do %>
            Remember Me
          <% end %>
        <% end -%>
      </div>

      <div class="col-sm-6"><%= f.submit "Log in", id: "login-btn", class: "btn btn-default" %></div>

    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  <% end %>

</section>

<script>
  $(document).ready(function(){
    $('nav').addClass('affix').addClass('dark')
  })
</script>