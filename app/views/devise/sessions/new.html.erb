<div id="login">

  <h1>Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div>

      <div>
        <div class="col-sm-3"><span>Email</span></div>
        <div class="col-sm-9"><%= f.email_field :email, autofocus: true %></div>
      </div>

      <div>
        <div class="col-sm-3"><span>Password</span></div>
        <div class="col-sm-9"><%= f.password_field :password, autocomplete: "off" %></div>
      </div>

      <div>
        <td colspan="2">
          <% if devise_mapping.rememberable? -%>
            <!-- <span id="remember">Remember Me</span> -->
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me do %>
              <span class="eleganticon"></span>Remember Me
            <% end %>
          <% end -%>
        </td>
      </div>

      <tr>
        <td colspan="2"><%= f.submit "Log in", id: "login" %></td>
      </tr>

    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  <% end %>

</div>