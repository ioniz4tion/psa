<section id="login">

  <h1>Log in</h1>

  <h2>Admin Only</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div>

      <div>
        <div class="col-sm-3"><span>Email</span></div>
        <div class="col-sm-9"><%= f.email_field :email, autofocus: true, :class => "form-control" %></div>
      </div>

      <div>
        <div class="col-sm-3"><span>Password</span></div>
        <div class="col-sm-9"><%= f.password_field :password, autocomplete: "off", :class => "form-control" %></div>
      </div>

      <div>
        <div class="col-sm-12">
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me do %>
              Remember Me
            <% end %>
          <% end -%>
        </div>
      </div>

      <div>
        <div class="col-sm-12"><%= f.submit "Log in", id: "login-btn" %></div>
      </div>

    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  <% end %>

</section>